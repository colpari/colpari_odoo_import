<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.ui.view" id="view_project_kanban">
            <field name="name">colpari.projects.kanban</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
            <field name="arch" type="xml">
                <field name="analytic_account_id" position="after">
                    <field name="current_year_in"/>
                    <field name="current_year_out"/>
                    <field name="current_year_net"/>
                    <field name="current_year_net"/>
                    <field name="current_year_margin"/>
                    <field name="current_month_in"/>
                    <field name="current_month_out"/>
                    <field name="current_month_net"/>
                    <field name="current_month_margin"/>
                    <field name="colpari_currency_id"/>
                </field>
                <xpath expr="/kanban/templates/t/div/div/div" position="inside">
                    <div class="o_kanban_primary_right">
                        <table t-if="record.current_month_in.raw_value != 0.0 or record.current_month_out.raw_value != 0.0 or record.current_year_in.raw_value != 0.0 or record.current_year_out.raw_value != 0.0" class="decimal_precision oe_price" style="font-size: smaller" t-att-data-precision="1">
                            <style>.cpb { border:0px solid lightgray; padding: 0px 7px;}</style>
                            <tr style="text-align: center"><th></th><th>in</th><th>out</th><th>margin</th></tr>
                            <tr t-if="record.current_month_in.raw_value != 0.0 or record.current_month_out.raw_value != 0.0">
                                <th>Month</th>
                                <td class="cpb"><field name="current_month_in" t-att-data-precision="'5'"/></td>
                                <td class="cpb"><field name="current_month_out"/></td>
                                <td class="cpb"><field name="current_month_net"/> (<field name="current_month_margin"/>)</td>
                            </tr>
                            <tr t-if="record.current_year_in.raw_value != 0.0 or record.current_year_out.raw_value != 0.0">
                                <th>Year</th>
                                <td class="cpb"><field name="current_year_in"/></td>
                                <td class="cpb"><field name="current_year_out"/></td>
                                <td class="cpb"><field name="current_year_net"/> (<field name="current_year_margin"/>)</td>
                            </tr>
                        </table>
                    </div>
                </xpath>            
         
