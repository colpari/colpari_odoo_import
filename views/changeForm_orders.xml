<?xml version="1.0"?>
<odoo>
  <data>
    <!-- change normal purchase.purchase_order_form form view -->
    <record id="purchase_order_form_colpari" model="ir.ui.view">
      <field name="name">purchase_order_form_colpari</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>
      <field name="arch" type="xml">

        <!-- service period begin/end -->
        <field name="currency_id" position="after">
          <field name="servicePeriodBegin"/>
          <field name="servicePeriodEnd"/>
        </field>

      </field>
    </record>

    <!-- change normal sale.view_order_form  -->
    <record id="sale_order_form_colpari" model="ir.ui.view">
      <field name="name">sale_order_form_colpari</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>
      <field name="arch" type="xml">

        <!-- service period begin/end -->
        <field name="partner_id" position="after">
          <field name="servicePeriodBegin"/>
          <field name="servicePeriodEnd"/>
        </field>

      </field>
    </record>

  </data>
</odoo>
