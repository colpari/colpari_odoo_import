<?xml version="1.0"?>
<odoo>
  <data>

    <!-- colpari.indicator_target list -->
    <record id="indicator_target_tree" model="ir.ui.view">
      <field name="name">colpari.indicator_target.tree</field>
      <field name="model">colpari.indicator_target</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <tree string="Indicator targets" sample="1">
          <field name="name" />
          <field name="scope" />
          <!-- <field name="indicator" />
          <field name="lower_bound_inclusive" />
          <field name="lower_bound" />
          <field name="upper_bound_inclusive" />
          <field name="upper_bound" /> -->
        </tree>
      </field>
    </record>

    <!-- base colpari.indicator_target form -->
    <record id="indicator_target_form" model="ir.ui.view">
      <field name="name">colpari.indicator_target.form</field>
      <field name="model">colpari.indicator_target</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <form>
          <sheet string="Indicator target">
            <group>
              <field name="name" />
              <field name="scope" />
              <field name="indicator" />
            </group>
            Is between
            <field name="lower_bound" class="oe_inline"/>&amp;nbsp;(<field name="lower_bound_inclusive" class="oe_inline"/>inclusive)
            and
            <field name="upper_bound" class="oe_inline"/>&amp;nbsp;(<field name="upper_bound_inclusive" class="oe_inline"/>inclusive)<br/>
          </sheet>
        </form>
      </field>
    </record>






    <!-- colpari.indicator list -->
    <record id="indicator_tree" model="ir.ui.view">
      <field name="name">colpari.indicator.tree</field>
      <field name="model">colpari.indicator</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <tree string="Indicators" sample="1">
          <field name="name" />
          <field name="min_value" />
          <field name="max_value" />
          <field name="isImplicit" />
        </tree>
      </field>
    </record>

    <!-- base colpari.indicator form -->
    <record id="indicator_form" model="ir.ui.view">
      <field name="name">colpari.indicator.form</field>
      <field name="model">colpari.indicator</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <form>
          <sheet string="Indicator">
            <group>
              <field name="name" />
              <field name="min_value" />
              <field name="max_value" />
              <field name="isImplicit" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- action for colpari.indicator list-->
    <record model="ir.actions.act_window" id="act_indicators_window">
      <field name="name">colpari indicators</field>
      <field name="res_model">colpari.indicator</field>
      <field name="view_mode">tree,kanban,form</field>
    </record>

    <!-- colpari.indicator_value list -->
    <record id="indicator_value_tree" model="ir.ui.view">
      <field name="name">colpari.indicator_value.tree</field>
      <field name="model">colpari.indicator_value</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <tree string="Indicator_values" sample="1">
          <field name="project_id" />
          <field name="partner_id" />
          <field name="indicator" />
          <field name="value" />
          <field name="activity_time" />
        </tree>
      </field>
    </record>

    <!-- colpari.indicator_value form -->
    <record id="indicator_value_form" model="ir.ui.view">
      <field name="name">colpari.indicator_value.form</field>
      <field name="model">colpari.indicator_value</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <form>
          <sheet string="Indicator_value">
            <group>
              <field name="activity_time" />
              <field name="project_id" />
              <field name="partner_id" />
              <field name="indicator" />
              <field name="value" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- colpari.indicator_value graph -->
    <record id="indicator_value_graph" model="ir.ui.view">
      <field name="name">colpari.indicator_value.graph</field>
      <field name="model">colpari.indicator_value</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <graph string="Indicator values" type="line" sample="1">
          <!-- <field name="activity_time" type="row" interval="day"/> -->
          <field name="activity_time" type="row"/>
          <field name="partner_id" type="row"/>
          <field name="project_id" type="col" />
          <field name="indicator" type="col" />
          <field name="value" type="measure" />
        </graph>
      </field>
    </record>

    <!-- colpari.indicator_value search -->
    <record id="indicator_value_search" model="ir.ui.view">
      <field name="name">colpari.indicator_value.search</field>
      <field name="model">colpari.indicator_value</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <search string="colpari indicator value search">
          <field name="partner_id" />
          <field name="project_id" />
          <field name="indicator" />
          <field name="activity_time" />
          <filter name="activity_time" date="activity_time" />
        </search>
      </field>
    </record>


    <!-- action for colpari.indicator_value list-->
    <record model="ir.actions.act_window" id="act_indicator_values_window">
      <field name="name">indicator values</field>
      <field name="res_model">colpari.indicator_value</field>
      <field name="view_mode">tree,graph,form</field>
      <field name="search_view_id" ref="indicator_value_search"/>
    </record>
  </data>
</odoo>