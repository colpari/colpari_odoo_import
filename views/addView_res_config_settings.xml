<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.colpari</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_admin'))]"/>
            <field name="arch" type="xml">

<xpath expr="//div[hasclass('settings')]" position="inside">
    <div class="app_settings_block" data-string="colpari_services" string="colpari Services" data-key="colpari_services" groups="colpari_services.group_colpari_admin">
        <h2>colpari settings</h2>
        <div class="row mt16 o_settings_container" id="colpari_services_setting_container">
            <group>
                <field name="module_auth_oauth_keycloak" />
                <field name="partner_oauth_provider" attrs="{'invisible': [('module_auth_oauth_keycloak', '=', False)]}"/>
            </group>
            <group>
                <field name="partner_email_domain" />
                <field name="partner_portal_url" />
            </group>
        </div>
    </div>
</xpath>
            </field>
        </record>
    </data>
</odoo>
