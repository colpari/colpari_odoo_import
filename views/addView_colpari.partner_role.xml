<?xml version="1.0"?>
<odoo>
  <data>
    <!-- partner_roles list -->
    <record id="partner_roles_tree" model="ir.ui.view">
      <field name="name">colpari.partner_roles.tree</field>
      <field name="model">colpari.partner_role</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <tree string="Project Partner Role" sample="1"> <!-- editable="bottom" delete="1" multi_edit="0" edit="0" -->
          <field name="display_name" />
          <field name="compensated_for_own_activities" />
          <field name="compensated_for_all_activities" />
          <field name="show_in_invoices" />
          <field name="create_service_authz_groups" />
          <field name="create_global_authz_groups" />
        </tree>
      </field>
    </record>

    <!-- partner_roles form -->
    <record id="partner_roles_form" model="ir.ui.view">
      <field name="name">colpari.partner_roles.form</field>
      <field name="model">colpari.partner_role</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h3>Partner role: <field name="display_name" /></h3>
            <group>
              <field name="compensated_for_own_activities" />
              <field name="compensated_for_all_activities" />
              <field name="show_in_invoices" />
              <field name="create_service_authz_groups" />
              <field name="create_global_authz_groups" />
            </group>
          <h5>LDAP mappings</h5>
          <field name="related_ldap_mappings" />
          </sheet>
        </form>
      </field>
    </record>

    <!-- action for partner_roles list-->
    <record model="ir.actions.act_window" id="act_partner_roles_window">
      <field name="name">colpari Partner roles</field>
      <field name="res_model">colpari.partner_role</field>
      <field name="view_mode">tree,kanban,form</field>
    </record>
  </data>    
</odoo>