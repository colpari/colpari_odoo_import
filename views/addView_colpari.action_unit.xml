<?xml version="1.0"?>
<odoo>
  <data>
    <!-- action units list -->
    <record id="action_units_tree" model="ir.ui.view">
      <field name="name">colpari.action_units.tree</field>
      <field name="model">colpari.action_unit</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <tree string="Action units" sample="1"> <!-- editable="bottom" delete="1" multi_edit="0" edit="0" -->
          <field name="name" string="Name" class="font-weight-bold"/>
          <field name="uom" string="odoo Unit"/>
          <!-- <field name="import_key" string="Import key"/> -->
        </tree>
      </field>
    </record>

    <!-- action units form -->
    <record id="action_units_form" model="ir.ui.view">
      <field name="name">colpari.action_units.form</field>
      <field name="model">colpari.action_unit</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>Action unit</h1>
            <group>
              <field name="name" string="Name"/>
              <field name="uom" string="odoo Unit"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- action for action units list-->
    <record model="ir.actions.act_window" id="act_action_units_window">
      <field name="name">colpari action units</field>
      <field name="res_model">colpari.action_unit</field>
      <field name="view_mode">tree,kanban,form</field>
    </record>
  </data>  
</odoo>