<?xml version="1.0"?>
<odoo>
  <data>
    <!-- action types list -->
    <record id="services_action_types_tree" model="ir.ui.view">
      <field name="name">colpari.action_types.tree</field>
      <field name="model">colpari.action_type</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <tree string="Action types" sample="1"> <!-- editable="bottom" delete="1" multi_edit="0" edit="0" -->
          <field name="name" string="Name" class="font-weight-bold"/>
          <!-- <field name="import_key" string="Import key"/> -->
        </tree>
      </field>
    </record>

    <!-- action types form -->
    <record id="services_action_types_form" model="ir.ui.view">
      <field name="name">colpari.action_types.form</field>
      <field name="model">colpari.action_type</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              Action type <field name="name" string="Name" required="1"/>
            </h1>
            <group>
              <!-- <field name="import_key" string="Import key" class="font-weight-bold"/> -->
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- action for action types list-->
    <record model="ir.actions.act_window" id="act_action_types_window">
      <field name="name">colpari action types</field>
      <field name="res_model">colpari.action_type</field>
      <field name="view_mode">tree,kanban,form</field>
    </record>
  </data>  
</odoo>