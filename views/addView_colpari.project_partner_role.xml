<?xml version="1.0"?>
<odoo>
  <data>
    <!-- partner_project_roles list -->
    <record id="partner_project_roles_tree" model="ir.ui.view">
      <field name="name">colpari.partner_project_roles.tree</field>
      <field name="model">colpari.partner_project_role</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <tree string="Project Partner Role" sample="1">
          <field name="project_id" />
          <field name="partner_id" />
          <field name="role_ids" widget="many2many_tags"/>
        </tree>
      </field>
    </record>

    <!-- partner_project_roles form -->
    <record id="partner_project_roles_form" model="ir.ui.view">
      <field name="name">colpari.partner_project_roles.form</field>
      <field name="model">colpari.partner_project_role</field>
      <field name="groups_id" eval="[(4, ref('colpari_services.group_colpari_user'))]"/>      
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>Partner role assignments</h1>
            <group>
              <field name="project_id" />
              <field name="partner_id" />
              <field name="role_ids" widget="many2many_tags"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- action for partner_project_roles list-->
    <record model="ir.actions.act_window" id="act_partner_project_roles_window">
      <field name="name">colpari Partner roles</field>
      <field name="res_model">colpari.partner_project_role</field>
      <field name="view_mode">tree,kanban,form</field>
    </record>
  </data>    
</odoo>